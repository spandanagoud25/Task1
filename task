# 1. Import libraries
import pandas as pd
import numpy as np
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.preprocessing import LabelEncoder, StandardScaler

# 2. Load dataset (Titanic dataset from Kaggle link)
df = pd.read_csv("Titanic-Dataset.csv")

# 3. Explore basic info
print(df.head())
print(df.info())
print(df.describe())
print(df.isnull().sum())

# 4. Handle missing values
# Fill Age with median, Embarked with mode, drop Cabin (too many nulls)
df['Age'].fillna(df['Age'].median(), inplace=True)
df['Embarked'].fillna(df['Embarked'].mode()[0], inplace=True)
df.drop(columns=['Cabin'], inplace=True)

# 5. Convert categorical â†’ numerical
# Using Label Encoding for 'Sex', One-Hot Encoding for 'Embarked'
le = LabelEncoder()
df['Sex'] = le.fit_transform(df['Sex'])
df = pd.get_dummies(df, columns=['Embarked'], drop_first=True)

# 6. Normalize / Standardize numerical features
scaler = StandardScaler()
num_cols = ['Age', 'Fare']
df[num_cols] = scaler.fit_transform(df[num_cols])

# 7. Detect outliers (visualize with boxplots)
for col in num_cols:
    sns.boxplot(x=df[col])
    plt.title(f"Outliers in {col}")
    plt.show()

# Optionally remove outliers using IQR
for col in num_cols:
    Q1 = df[col].quantile(0.25)
    Q3 = df[col].quantile(0.75)
    IQR = Q3 - Q1
    lower = Q1 - 1.5*IQR
    upper = Q3 + 1.5*IQR
    df = df[(df[col] >= lower) & (df[col] <= upper)]

# 8. Final clean dataset
print(df.head())
print(df.info())
